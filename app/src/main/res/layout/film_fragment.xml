<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/film_data_padding">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/film_data_padding">

            <TextView
                android:id="@+id/film_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/film_data_text_size"
                android:text="@string/test_name"/>

            <TextView
                android:id="@+id/film_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/film_data_text_size"
                android:text="@string/test_rating"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/film_data_padding">

            <TextView
                android:id="@+id/film_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/film_data_text_size"
                android:text="@string/test_time"/>

            <TextView
                android:id="@+id/film_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/film_data_text_size"
                android:text="@string/text_year"/>

            <TextView
                android:id="@+id/film_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/film_data_text_size"
                android:text="@string/test_country"/>
        </TableRow>
    </TableLayout>

    <include
        layout="@layout/film_description"/>

</LinearLayout>