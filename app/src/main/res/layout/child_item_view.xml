<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/background_item_card_view">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/film_poster_card_view"
                android:layout_width="150dp"
                android:layout_height="@dimen/height_film_image"
                android:contentDescription="@string/film_poster_card_view"
                android:scaleType="centerCrop"
                android:src="@drawable/film_test" />

            <TextView
                android:id="@+id/film_name_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:maxLines="2"
                android:textSize="@dimen/text_size_main_screen_name"
                android:textColor="@color/text_color_main_screen"/>

            <TextView
                android:id="@+id/film_year_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:textSize="@dimen/text_size_main_screen"
                android:textColor="@color/text_color_main_screen"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>